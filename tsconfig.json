{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./bin",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {},
    "types": ["@dcl/js-runtime"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
